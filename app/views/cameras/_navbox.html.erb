<div class="navigator_box" style="left: <%= (i%3)*247 %>px;">
<div id="box<%=i%>" class="borderbox">
	
	    <% if !@cameras[i].imagemwidth.blank? %>
	    <div class='save'>
			<%= link_to "Save it", "javascript:saveit(#{@cameras[i].id})" %>
		</div>
		<%= image_tag @cameras[i].imagemurl, :width => @cameras[i].imagemw, :height => @cameras[i].imagemh, :onClick => "fadeout(#{@cameras[i].id});" %> 	
		<div class='rightbar'>
			MP:<%= @cameras[i].maximumresolution %><br>
			DS:<%= @cameras[i].displaysize %><br>
			OZ:<%= @cameras[i].opticalzoom %><br>
		</div>
	<%end%>
	<a href="/cameras/<%=@cameras[i].id%>" onClick="fadeout(<%=@cameras[i].id%>);return false;">
	<p><%= @cameras[i].title[0..87] %></p>
	<p><% if !@cameras[i].salepriceint.blank? %>
		<span style="color: red;"><%= @cameras[i].salepricestr %></span> <span style="text-decoration: line-through;"><%= @cameras[i].listpricestr %></span>
		<% else %>
		<%= @cameras[i].listpricestr %>
		<% end %>
	</p>
	</a>
	<div class="bottombar">
		<div class='sim'>
		    <%= link_to 'See more (10)', {:id => @cameras[i], :action => 'sim', :controller => 'search', :pos => i}, :class => 'sim' %>
		</div>
		<div class="clusterfeatures">
		<% if !@desc[i].nil? %>
		<% @desc[i].each do |item| %>
		    <% next if item[1] == 0 %>
			<%= link_to "#{item[0]}#{item[1]>0 ? image_tag('up.gif') : image_tag('down.gif')}", {:action => "#{item[0]}"}, {:class => "#{item[1]>0 ? 'up' : 'down'}"}%>
		<% end %>
		<% end %>
		</div>
	</div>
</div>
</div>