@import url("/stylesheets/welcomeIE.css");
</style><![endif]-->

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
<!-- The jquery-ui script is being included locally due to the custom jquery-ui being about 45k instead of 200kb from Google's CDN -->
<%= raw javascript_include_merged :base %>

<!-- Piwik -->
<script type="text/javascript">
var pkBaseURL = (("https:" == document.location.protocol) ? "https://analytics.optemo.com/" : "http://analytics.optemo.com/");
document.write(unescape("%3Cscript src='" + pkBaseURL + "piwik.js' type='text/javascript'%3E%3C/script%3E"));
</script><script type="text/javascript">
try {
var piwikTracker = Piwik.getTracker(pkBaseURL + "piwik.php", <%= s.piwikSiteId %>); // idsite is here
piwikTracker.trackPageView();
piwikTracker.enableLinkTracking();
} catch( err ) {}
</script><noscript><p><img src="http://analytics.optemo.com/piwik.php?idsite=<%= s.piwikSiteId %>" style="border:0" alt="" /></p></noscript>
<!-- End Piwik Tag -->

<% if (s && s.directLayout) #check for existence first, just in case %>
	<%= raw popuptext(1, "Products are sorted by their utility. Click on one to see its specs.") %>
	<%= raw popuptext(2, "Group by features to limit the number of products shown.") %>
	<%= raw popuptext(3, "Slide the filters to constrain your search terms based on a variety of specific criteria.") %>
	<%= raw popuptext(4, "Drag and drop products in here to compare their specs directly.", "Start Browsing") %>
<% else %>
	<%= raw popuptext(1, "Each product shown is a representative of a dynamically created group of similar products. To browse within that group, click &quot;more like this.&quot;") %>
	<%= raw popuptext(2, "Slide the filters to constrain your search terms based on a variety of specific criteria.") %>
	<%= raw popuptext(3, "Drag and drop products in here to compare their specs directly.", "Start Browsing") %>
<% end %>
<div id="backgroundPopup"></div>
<noscript><div id="noJavascript" style="position:absolute; top: 40px; left:30px; width:250px; background: #FFFFFF; opacity:0.8"><b>Javascript is disabled.</b>For full functionality, please enable javascript.</div></noscript>
</body>
</html>
