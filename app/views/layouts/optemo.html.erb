<% s = Session.current %>	
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"> <!-- xmlns:fb="http://www.facebook.com/2008/fbml" -->
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= title %></title>
  <meta name="description" content="<%= describe %>" />
<meta name="keywords" content="laser, printer, printers, buy, prices, price comparison, reviews, recommendation, HP, Canon, Xerox" />
<meta name="robots" content="index,all,follow" />
<meta name="classification" content="Laser Printers" />
<meta name="rating" content="General" />
<link rel="shortcut icon" href="/favicon.ico" />
<%= raw stylesheet_link_merged(s.directLayout ? :listview : :gridview) %>
</head>
<body>
<div id="mycenter">
   <div id="header">
	  <!-- div id="flags">
		<%= link_to image_tag('us.gif'), url_for_intl('com') %>
		<%= link_to image_tag('ca.gif'), url_for_intl('ca') %>
	  </div-->
	  <div id="logo">
		<a href="<%= url_for '/' %>" id ="logo" title="<%=t s.product_type+".url" %>"><%= image_tag("#{s.product_type}.jpg")%><span>Home</span></a>
	  </div>
	 <div id="tagline">
		<%=t "#{s.product_type}.tagline" %>
	</div>
	 <div id="tourButton"><%= link_to "Launch Tour", '#' %></div>
   </div>
   <div class="watermark">Powered by <%= link_to 'Optemo', 'http://optemo.com', :class => "popup" %></div>
   <div class="bd <%= 'rounded_bd ' unless s.directLayout %>rounded">
	<div class="tl"></div><div class="tr"></div>
    <%= yield %>
	<div class="bl"></div><div class="br"></div>
   </div>
</div>
<div id="bottomlinks">
   <%= link_to 'Home', '/' %> |
   <%= link_to 'Terms of Use', '/termsofuse', {:title => 'Legal'}  %> |
   <%= link_to 'Site Map', '/sitemap', {:title => 'Link to all products'} %> |
   <%= link_to 'About Us', '/about', {:title => 'LaserPrinterHub'} %> |
   <%= link_to 'Contact Us', "znvygb:grnz\100ynfrecevagreuho\056pbz", {:class => 'decrypt', :title => 'Email Us'}%>
</div>
<div id="silkscreen">&nbsp;</div>
<div id="filter_bar_loading">Loading</div>
<div id="outsidecontainer"><%= link_to image_tag("closepopup#{fr?}.gif"), "close", :class => "close"%><div id="info">&nbsp;</div></div>
<div id="feedback">
<%= image_tag "feedback#{fr?}.png" %>
</div>
<div style="display:none;">
	<% if s %>
	<span id="dragDropEnabled"><%= s.dragAndDropEnabled %></span>
	<span id="seshid" session-id="<%= s.id unless s.nil? %>"><%= s.id %></span>
	<span id="modelname"><%= s.product_type %></span>
	<span id="directLayout"><%= s.directLayout %></span>
	<% end %>
</div>

<!--[if lt IE 7]><style>
