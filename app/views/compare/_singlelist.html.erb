<div id="box" class="navigator_box nbsingle">
	<div class="productinfo rounded" data-id="<%= product.id %>">
		<div class="productimg">
			<%= image_tag(imgurl(product) , :"data-id" => product.id, :class => "productimg", :alt => product.smlTitle, :title => product.smlTitle) %>
			<% if $DragAndDropEnabled %>
				<%= image_tag('hand_and_arrow.gif', :class => "dragHand", :title => 'Click for product info. Drag to compare with other products.') %>
			<% end %>
		</div>
		<div class="itemfeatures">
			<div class="itemtitle"><%= product.smlTitle %></div>
			<% $Categorical["showList"].each do |f|%>
			  <%= render :partial => 'featurevaluesg', :locals => {:f => f, :val => CatSpec.cache(product.id, f)} %>
			<% end %>
			<% $Continuous["showList"].each do |f|%>
			  <%= render :partial => 'featurevaluesg', :locals => {:f => f, :val => ContSpec.cache(product.id, f)} %>
			<% end %>
			<% $Binary["showList"].each do |f|%>
			  <%= render :partial => 'featurevaluesg', :locals => {:f => f, :val => BinSpec.cache(product.id, f)} %>
			<% end %>
		</div>
		<div class="price">
			<%= number_to_currency(ContSpec.cache(product.id, "price")) %>
		</div>
		<div class='priceunit'>
			<%= t("#{$product_type}.priceunit") unless t("#{$product_type}.priceunit") == '$' %>
		</div>
	</div>
	<div style="clear:both;"></div>
</div>
