<% if @plain %>
<div class="poptitle"><%=t 'products.show.title'%></div>
<% else %>
<% self.title = "#{@product.title}" %>
<div class="content">
<a href="/" id="browseother">Browse Other Printers</a>
<% end %>
	<h1><%= @product.title %></h1>
	<div id="image">
		<% if @s.product_type == "flooring_builddirect" || @s.product_type == "Laptop" || FileTest.exist?("#{Rails.root}/public" + @imglurl) %>
			<%= link_to image_tag(@imglurl), @imglurl, :class => "popup" %>
		<% else %>
			<br><br>No Image Available
		<% end %>
	</div>
	<div id="features">
	<ul>
		<% (@s.continuous["show"]+@s.categorical["show"]+@s.binary["show"]).each do |f_name| %>
			<% f = @allspecs[f_name] %>
			<% if !f.nil? %>
				<li>
				 	<span class="detail_label"><%=t 'products.'+ f_name %>: </span> <%= "$" if f_name == 'price' %><%= (@product.display(f_name, f)).split('*').each(&:strip).uniq.join(" ") %><%=' ' + t('products.'+ f_name+'unit', :default => '') unless f_name == 'price' %>
				</li>
			<% end %>
		<% end %>
	</ul>
	</div>
	<div style="clear: left; height:5px;"></div>
	<div class="showtable">
	
	</div>
	

<% if !@plain %><div style="clear: both;"></div></div><% end %>