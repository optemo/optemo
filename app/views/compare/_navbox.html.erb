<div id="box<%= product.id %>" class="navbox" <%= ("style='margin-right:0px;background:none;'" if i % (Float(@s.numGroups)/3).ceil == (Float(@s.numGroups)/3).ceil - 1) %>>
	<div class="topbar">
	  <div class="spacer">
	    <input type="checkbox"
		   data-id="<%= product.id %>"
		   data-sku="<%= product.sku %>"
		   class="optemo_compare_checkbox" />
	    <a class="awesome_reset
		      global_btn optemo_compare_button" style="" href="#">
	      <span>COMPARE</span>
	    </a>
	  </div>

		<%= image_tag(CatSpec.cache_all(product.id)["img150url"], :class => "productimg", :alt => product.small_title, :title => product.small_title, :'data-id' => product.id, :'data-sku' => product.sku) %>
		<div class="productinfo">
			<%= link_to product.small_title, product_path(:name => product.descurl, :id => product.id), :'data-id' => product.id, :'data-sku' => product.sku, :class => "easylink", :title => t('products.compare.clickforspecs') %>
		    
			<div class="productspecs"><%=featuretext(product.id) %></div>
			<% if BinSpec.cache_all(product.id)["onsale"] %>
				<div class="saleprice">
				<%= t('products.compare.onsale')+": "+number_to_currency(ContSpec.cache_all(product.id)["saleprice"]) %></div>	
				<div class="save"><%= t('products.compare.save')+": "+ number_to_currency(ContSpec.cache_all(product.id)["price"]-ContSpec.cache_all(product.id)["saleprice"]) %></div>
			    <div class="saleends"><%= t('products.show.saleends')+": "%><%= l((Date.parse(CatSpec.cache_all(product.id)["saleEndDate"]) - 1.day), :format => :long) if CatSpec.cache_all(product.id)["saleEndDate"] %></div>
			<% else %>
				<div class="price">
					$<%= number_with_delimiter(ContSpec.cache_all(product.id)["price"]) %>
				</div>	
			<% end %>
			<% if ContSpec.cache_all(product.id)["customerRating"] > 0 %>
				<div class="stars" data-stars="<%= ContSpec.cache_all(product.id)["customerRating"] %>"></div>
			<% end %>
		</div>
	</div>
</div>
