<div id="navigator_bar<%= '_bottom' if defined? bottom %><%= '_top' if defined? landing %>" <%= "style='height:99px'" if (request.host == "keyword" && !defined? bottom) %><%= "style='height:80px'" if request.host == "keyword" %>>
  <div id="navtitle">
    <% if defined? bottom || defined? landing %>
      <%= Session.search.products_size %> <%= raw(product_title) + " " + t("products.compare.available") %>
    <% else %>
      <div class='nav-number'>
        <%= Session.search.products_size %>
      </div>
      <div class='sub-title'>
       	<span class='nav-available-text'><%= raw(product_title) + " " + t("products.compare.available")%></span> 
        <div class='outof'>
         	<% total = Session.search.solr_all -%>
			<%= t("products.compare.outof")+" #{total} "+(I18n.locale == :fr ? product_title.downcase : product_title) if (Session.search.products_size < total) %>
    		</div>
  	  </div>
  	<% end %>
  </div>
  <% if defined? landing %>
    <%= link_to(root_path, {:class=>'seeall'}) do %>
      <%=t 'products.seeall' %> <div><!-- --></div>
    <% end %>
  <% else %>
    <%= link_to(t(Session.product_type+".compare")+' (0) ', "#", {:class=>'awesome_reset_grey global_btn_grey nav-compare-btn', :id=>"nav_compare_btn#{'_bottom' if defined? bottom}"})  %>
    <%= link_to t('products.compare.clear'), "#", :class => "nav_clear_btn", :rel => "nofollow", :title => t('products.compare.cleardesc') %>
    <% if request.host == "keyword" && !defined?(bottom) %>
    	<%= render 'pagination_search' %>
    <% end %>	
  <% end %>
</div>
