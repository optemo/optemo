<div id="navigator_bar<%= '_bottom' if defined? bottom %>" <%= "style='height:99px'" if request.host == "keyword" %>>
  <div id="navtitle">
    <% if defined? bottom %>
      <%= Session.search.products_size %> <%= raw(product_title) + " " + t("products.compare.available") %> 
    <% else %>
      <div class='nav-number'>
        <%= Session.search.products_size %>
      </div>
      <div class='sub-title'>
        <span class='nav-available-text'><%= raw(product_title) + " " + t("products.compare.available") %></span> 
        <div class='outof'>
          <% total = Session.search.solr_all -%>
          <%= t("products.compare.outof")+" #{total} "+(I18n.locale == :fr ? product_title.downcase : product_title) if (Session.search.products_size < total) %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to(t("products.compare.compare")+' (0) ', "#", {:class=>'awesome_reset_grey global_btn_grey nav-compare-btn', :id=>"nav_compare_btn#{'_bottom' if defined? bottom}"})  %>
  <%= link_to t('products.compare.clear'), "#", :class => "nav_clear_btn", :rel => "nofollow", :title => t('products.compare.cleardesc') %>
  <% if request.host == "keyword" && !defined?(bottom) %>
    <%= form_tag("/search", :method => "post", id: "keyword_search") do %>
      <% solr_config = YAML.load_file("#{Rails.root}/config/sunspot.yml")[Rails.env] %>
      <%=raw autosuggest_text_field "product", "name", "http://#{solr_config['solr']['hostname']}:#{solr_config['solr']['port']}/solr/", "product_name", size: 68,  value: Session.search.keyword_search || "Keyword or Web Code", onfocus: "javascript:if (this.value == 'Keyword or Web Code') {this.value='';}" %>
      <%= submit_tag "Search", id: 'keyword_submit' %>
    <% end %>
  <% end %>
</div>

<% if Session.search.products_size > SearchProduct.per_page %><!-- top pagination bar -->
  <% products = Session.search.paginated_products %>
  <div class='pagination-container'><span class='pagi-info'><%= page_entries_info(products) %></span>
    <b><%=t 'products.page' %>:</b><%= will_paginate(products, {:previous_label=>image_tag('prev-page.gif'), :next_label=>image_tag('next-page.gif'), :page_links=>true, :outer_window => -4})%>
    <%= link_to t("products.backtotop"), "#", id: "back-to-top-bottom" if defined? bottom %>
  </div>
  
  
<% end %>