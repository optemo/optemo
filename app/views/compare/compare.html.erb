<% self.title = "#{@s.product_type.capitalize}" unless @indexload %>
<% main_window = render :partial => (params.include?(:landing) ? 'landing' : 'discoverybrowser') unless @indexload %>
<div class="left-right-wrapper">
<div id="leftbar">
	<!-- The Filters section -->
	<div id="filterbar" class="leftboxes">
		<div id="ajaxfilter">
			<% unless @indexload %>
				<%= render :partial => 'filter', :locals => {:s => Session, :current_search => Session.search} %>
			<% end  %>
		</div>
	</div>
	<div class="watermark"><%=t('products.compare.powered')%><%= link_to 'Optemo', 'http://optemo.com', :class => "popup" %></div>
</div>
<div id="main" data-product_type='<%= Session.product_type %>'>
	<% if @indexload %>
		<div id="opt_discovery"></div>
	<% else %>
		<%= main_window %>
	<% end %>
</div>
</div>


