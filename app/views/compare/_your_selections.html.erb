<div id='your_selections' class='feature'>
  <div class="selection_label hanging_margin"><%= t('products.compare.selections') %></div>
  <div id="selections_text" class='categorical'>
    <% grouped_filters.each do |f| -%>
      <% values = f[1] %>
      <% fname = f[0] %>
      <% t_key = (fname == 'pricePlusEHF' ? 'saleprice' : fname) %>
      <% unless values.nil? %>
        <% if values.count > 0 %>
          <% unless spec_type(values.first) == 'facet' or spec_type(values.first) == 'binary' %>
            <div class='label list_item hanging_margin'>
              <%= @t["#{Session.product_type}.filter.#{t_key}.name"] || @t["#{chosencats('product_type').first}.filter.#{t_key}.name"] || t_key.capitalize %><%= ":" if Session.futureshop? %>
            </div>
          <% end %>
          <% rangesShow = showSelectedRanges(values, fname) %>
          <% values.each_with_index do |spec, index| -%>
            <% if spec_type(spec) == 'facet' -%>
              <div class='label list_item hanging_margin'>
                <%= @t["#{spec.product_type}.filter.#{spec.name}.name"] || spec.name.capitalize -%>
              </div>
            <% else -%>
              <div class='list_item hanging_margin' data-name='<%= spec_type(spec) %>_<%= spec.name %>' class='current_filter' 
                <% if spec_type(spec) == 'continuous' %>
                  data-value='<%= my_to_i(spec.min) %>;<%= my_to_i(spec.max) %>'
                <% elsif spec_type(spec) == 'categorical' %>
                  data-value='<%= spec.value %>'
                <% end %>
                  >
                <%= displaySelectedString(spec, rangesShow.empty? ? nil : rangesShow[index]) %>
                <% unless spec.name == 'keyword' %>
                  <a class='remove_filter' href='#'><div><!-- --></div> <%= Session.futureshop? ? t('products.compare.remove') : t('products.compare.undo') %> </a>
                <% end %>
              </div>
            <% end -%>
          <% end -%>
        <% end -%>
      <% end -%> <%# unless values.nil? %>
    <% end -%> <%# grouped.filters.each %>
  </div>
  <% if Session.futureshop? %>
    <div class="hanging_margin" style="margin-top: 7px;">
      <%= link_to t('products.compare.futureshop_reset'), "/", :class => "reset regular_reset", :rel => "nofollow", :title => t('products.compare.resetdesc') %>
    </div>
  <% end %>
</div>