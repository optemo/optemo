<div id="box<%= i %>" class="navigator_box <%= group ? "nbgroup" : "nbsingle" %>" <%= "style='margin-right:0px'" if i%(Float($NumGroups)/3).ceil == (Float($NumGroups)/3).ceil - 1 %>>
	<div class="topbar">
		<div class='title'>
			<%= groupDesc(group,i) %>
		</div>
		<% if FileTest.exist?("public/images/" + ($model.name == 'Camera' ? "cameras" : "printers") + "/" + cluster.representative(@session,@s.searchpids).id.to_s + "_m.jpg") %>
		
		<% if $DragAndDropEnabled == true %>
			<div class='image_boundingbox'>
				<%= image_tag('hand_and_arrow.gif', :class => 'dragHand', :title => 'Click for product info. Drag to compare with other products.') %>
		<% end %>
				<%= image_tag(($model.name == 'Camera' ? "cameras" : "printers") + "/" + cluster.representative(@session,@s.searchpids).id.to_s + "_m.jpg" , :"data-id" => cluster.representative(@session,@s.searchpids).id, :class => "productimg", :alt => cluster.representative(@session,@s.searchpids).smlTitle, :"title" => 'Click for product info. Drag to compare with other products.') %>
		<% if $DragAndDropEnabled == true %>		
			</div>
		<% end %>
		<% end %>
		<div class="productinfo">
			<a href="<%=cluster.representative(@session,@s.searchpids).descurl%>" data-id="<%=cluster.representative(@session,@s.searchpids).id%>" class="easylink" title="Click for product specifications">
		<%= cluster.representative(@session,@s.searchpids).smlTitle %></a>
		
		<div class="price">
			<%= $region == "us" ? cluster.representative(@session,@s.searchpids).pricestr : cluster.representative(@session,@s.searchpids).price_ca_str %>
		</div>
		</div>
	</div>

	<div class='bottombar'>
		<% if group %>
    		<div class='sim rounded'>
    	  <%= link_to(image_tag('plus.png')+t("products.compare.similar",:count => cluster.size(@session,@s.searchpids) - 1), 
    	  "/#{$model.urlname}/sim/"+cluster.id.to_s, 
 		  :id => "sim#{i}", :class => 'simlinks rounded', :"data-id" => "#{cluster.representative(@session,@s.searchpids).id}", :"title" => "Browse through all " + cluster.size(@session,@s.searchpids).to_s + " in this group") %>
    		</div>
		<% else %>
		&nbsp;
			<%#-- <div class='compare'><%= link_to image_tag("compare#{fr?}.gif"), "javascript:saveProductForComparison(#{cluster.representative(@session,@s.searchpids).id},\"#{cluster.representative(@session,@s.searchpids).imagemurl}\",\"#{cluster.representative(@session,@s.searchpids).smlTitle}\");", {:class => 'save', :itemId => "#{cluster.representative(@session,@s.searchpids).id}" } 
			</div> --%>
				<p>&nbsp;
					
		<% end %>
	</div>
</div>
