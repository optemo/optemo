<div class='feature'>
<div class='disp'>
	<!-- MoneyFormatting -- $<%= @search.nil? ? min.to_i : @search.send("#{val}_min".intern) < min ? min.to_i : @search.send("#{val}_min".intern).to_i %>-$<%= @search.nil? ? max.ceil : @search.send("#{val}_max".intern) > max ? max.ceil : @search.send("#{val}_max".intern).ceil %>-->
	<!-- RegularFormatting -- <%= @search.nil? ? min : @search.send("#{val}_min".intern) %>-<%= @search.nil? ? max : @search.send("#{val}_max".intern) %> <%= session[:productType].constantize::MainFeaturesLabel[val] %>-->
	<% if @c.filterinfo && @c.filterinfo["#{val}_max"] %>
	  <%= '$' if money_formatting %><%= @c.filterinfo["#{val}_min"].to_i %>-<%= '$' if money_formatting %><%=  @c.filterinfo["#{val}_max"].ceil %> <%= session[:productType].constantize::MainFeaturesLabel[val] %>
	<% end %>
</div>
<div class='label space'>
	<%= name %>
</div>
<div class="hist" 
<% if @c.filterinfo %>
data-data="<%= @c.filterinfo["#{val}_hist"] %>"
<% end %>
></div>
<%= hidden_field_tag "myfilter[#{val}_min]", @session.send("#{val}_min".intern),{:class => 'min'}%>
<%= hidden_field_tag "myfilter[#{val}_max]", @session.send("#{val}_max".intern),{:class => 'max'}%>
<div class='slider' 
data-min='<%= val=='price' ? @dbprops.price_min/100 :  @dbprops.db_features.find_by_name(val).min.to_i%>'
data-max='<%= val=='price' ? (@dbprops.price_max.to_f/100).ceil : @dbprops.db_features.find_by_name(val).max.ceil%>'
data-startmin='<%= @session.send("#{val}_min".intern) %>'
data-startmax='<%= @session.send("#{val}_max".intern) %>'
<% if @c.filterinfo %>
data-prodmin='<%= @c.filterinfo["#{val}_min"] %>' 
data-prodmax='<%= @c.filterinfo["#{val}_max"] %>'
<% end %>
<%= money_formatting ? 'data-formatting="$"' : ""  %>>
	<div class="endlabel_min"><%= min.to_i %></div>
	<div class="endlabel_max"><%= max.ceil %></div>
</div>
</div>