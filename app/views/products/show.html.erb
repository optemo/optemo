<%= link_to image_tag('close.gif'), "javascript:fadein();", :id => 'close' if @plain%>
<% if !@plain %><div id="outside">
	<span style="float: left;"><%= nav_link %></span>
	<div id="container" style="margin-left: 149px">
<% else %>		
	<div id="container">
	<div class='save'>
		<%= link_to "Save it", "javascript:saveit(#{@product.id})" %>
	</div>
<% end %>
	<p style="margin: 15px 0px 0px 20px"><%=h @product.title %></p>
	<div id="image"><%= link_to image_tag(@product.imagelurl, :width => @product.imagelw, :height => @product.imagelh), @product.imagelurl, :popup => true %></div>
	<div id="features">
	<ul>
		<% $productType::ShowFeatures.each_index do |i| %>
			<% f_name = $productType::ShowFeatures[i] %>
			<% f = @product.send(f_name) %>
			<% if !f.nil? %>
				<li><span class="detail_label"><%= $productType::ShowFeaturesDisp[i] %>: </span><%= @product.display f_name %></li>
			<% end %>
		<% end %>
	</ul>
	</div>
	<% if !@product.feature.nil? %>
	<div id="textfeatures">
		<ul>
		<li><%= @product.feature.gsub("\n",'</li><li>') %></li>
		</ul>
	</div>
	<% end %>
	<div id="reviews">
		<h3>Reviews</h3>
		There are no reviews for this item yet.
	</div>
	<div class="showtable">
		<h3>Available at the following Retailers</h3>
	<div class="left">
	<% if !@product.salepriceint.blank? %>
		<span class="detail_label">List Price: </span><span style="text-decoration: line-through;"><%= @product.listpricestr %></span><br>
		<span class="detail_label">Sale Price: </span><span style="color: red;"><%= @product.salepricestr %></span>
	<% else %>
		<span class="detail_label">Price: </span><%= @product.listpricestr %>
	<% end %>
	</div>
	<div class="right">
		<%= link_to 'Go to Seller', 'http://amazon.com/o/ASIN/'+@product.asin+'?t=optemo-20', :popup => true %> <%=  link_to image_tag('amazon.gif'), 'http://amazon.com/o/ASIN/'+@product.asin+'?t=optemo-20', :popup => true %>
	</div>
	</div>
	<%= flash[:notice] %>
	<div id='full_link'>
	<% if @plain %>
	<%= link_to 'Open as full page', :action => 'show', :id => @product%>
	<% end %>
	</div>
	
</div>
<% if !@plain %></div><% end %>