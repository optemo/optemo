<div class="thumbnailcell spec_column_<%= column_number.to_s %>">
		<div class="first">
			<%= link_to image_tag(catspecs["imgmurl"], :"data-id" => thumbnails.id, :class => "compareimg"), TextSpec.cacheone(thumbnails.id, "productUrl#{fr?}"), {:class => 'easylink', :'data-id' => thumbnails.id} %>
 		</div>
	<div class="thumbnaillabel">
	<div style="height: 80px">
   	<%= link_to CatSpec.cache_all(thumbnails.id)["title#{fr?}"] || thumbnails.title, TextSpec.cacheone(thumbnails.id, "productUrl#{fr?}"), :class => 'easylink', :'data-id' => thumbnails.id %>
	<div class="thumbnaildetails">
    	<% if binspecs["onsale"] %>
    		<%= t('compare.index.onsale') + (fr?.empty? ? "" : " ")+": " + (fr?.empty? ? "$" : "") + number_with_delimiter(contspecs["saleprice"]) %>
    	<% else %>
    		<%= "$" if fr?.empty? %><%= number_with_delimiter(contspecs["price"]) %>
    	<% end %>
    	<%= " $" unless fr?.empty? %>
	</div>
	</div>
	<%= link_to image_tag("bestbuy_addtocart#{fr?}.gif"), "http://www.bestbuy.ca/order/addtocart.ashx?accessories=#{thumbnails.sku}", {:'data-sku' => thumbnails.sku, :class => 'addtocart', :'data-name' => small_title(thumbnails)} %>
	</div>
</div>
