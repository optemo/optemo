<div class="outertitle"><div class="columntitle">
</div></div>

<% gray = true %>
<% @s.continuous["filter"].each do |feat| %>
<div class="cell <%= gray ? "graybg" : "whitebg" %>">
	<% gray = !gray %>
	<% if numberofproducts > 1 && (@bestvalue[feat] != nil && (@bestvalue[feat] == product.id || IsPresentAndUniqueInCSV(product.id, @bestvalue[feat]))) %>
		<!-- If the interesting feature should be displayed then display -->
		<b><%= contspecs[feat].to_s + " (" + t("#{Session.product_type}.specs.#{feat}.unit") %>)</b>		
	<% else %>
		<%= contspecs[feat].to_s + " (" + t("#{Session.product_type}.specs.#{feat}.unit") %>)
	<% end %>
	</div>
<% end %>
<% @s.categorical["filter"].each do |feat| %>
<div class="cell <%= gray ? "graybg" : "whitebg" %>">
	<% gray = !gray %>
	<% if numberofproducts > 1 && (@bestvalue[feat] != nil && (@bestvalue[feat] == product.id || IsPresentAndUniqueInCSV(product.id, @bestvalue[feat]))) %>
		<!-- If the interesting feature should be displayed then display -->
		<b><%= catspecs[feat].to_s if catspecs[feat] %></b>		
	<% else %>
		<%= catspecs[feat].to_s if catspecs[feat] %>
	<% end %>
	</div>
<% end %>
<% @s.binary["filter"].each do |feat| %>
<div class="cell <%= gray ? "graybg" : "whitebg" %>">
	<% gray = !gray %>
	<% if numberofproducts > 1 && (@bestvalue[feat] != nil && (@bestvalue[feat] == product.id || IsPresentAndUniqueInCSV(product.id, @bestvalue[feat]))) %>
		<!-- If the interesting feature should be displayed then display -->
		<b><%= binspecs[feat] ? image_tag("checkmark.png", :height => "16px") : image_tag("x.png", :height => "16px")%></b>		
	<% else %>
		<%= binspecs[feat] ? image_tag("checkmark.png", :height => "16px") : image_tag("x.png", :height => "16px")%>
	<% end %>
	</div>
<% end %>
