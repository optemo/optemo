/* Zurb http://www.zurb.com/article/266/super-awesome-buttons-with-css3-and-rgba */
.optemo .awesome_reset, 
    .optemo .awesome_reset:visited {
	    background: #003b65 url(<%= asset_data_uri "alert-overlay.png" %>) repeat-x; 
	    display: inline-block; 
	    padding: 5px 10px; 
	    color: #FFF; 
	    text-decoration: none;
	    -moz-border-radius: 4px; 
	    -webkit-border-radius: 4px;
	    border-radius: 4px;
	    -moz-box-shadow: inset 0 7px 8px #2680bf;
	    -webkit-box-shadow: inset 0 7px 8px #2680bf;
	    box-shadow: inset 0 7px 8px #2680bf;
	    text-shadow: 0 -1px 1px rgba(0,0,0,0.25);
	    position: relative;
	    cursor: pointer;
    }
.optemo .ie67 .awesome_reset,
.optemo .ie67 .awesome_reset:visited {
  background-image: url(<%= asset_path "alert-overlay.png" %>);
}
.optemo .awesome_reset_grey, 
        .optemo .awesome_reset_grey:visited {
          @include background-gradient(#9e9e9e, #ccc);
   	      display: inline-block; 
	        color: #FFF; 
	        text-decoration: none;
	        -moz-border-radius: 4px; 
	        -webkit-border-radius: 4px;
	        border-radius: 4px;
	        text-shadow: 0 -1px 1px rgba(0,0,0,0.25);
/*	border: 1px solid #c4c5c5; */
	        position: relative;
	        cursor: pointer;
        }
.optemo .awesome_reset:hover, .optemo .awesome_reset_grey:hover {text-decoration: none;background-color: #004373; }

.optemo .regular_reset, .optemo .regular_reset:visited {
  display: inline-block;
  padding: 0;
  color: #039;
  text-decoration: none;
}

.optemo .regular_reset:hover {
  text-decoration: underline;
}

.optemo .regular_reset span {
  margin-right: 4px;
  font-weight: normal;
  font-size: 12px;
}

.optemo .optemo_compare_checkbox {
  padding: 0;
  margin: 0;
}

.optemo #IE .optemo_compare_checkbox {
  vertical-align: middle;
}
/* Global Button */
.optemo #IE .awesome_reset,.optemo #IE .awesome_reset:visited,  .optemo #IE .awesome_reset_grey, .optemo #IE .awesome_reset_grey:visited {
	border: none;
}

.optemo #IE.ie67, .optemo #IE.ie8 {
  #navigator_bar_bottom .global_btn {
    background: url(<%= asset_path "IE/compare_button_blue.gif" %>) no-repeat top left;
  }
  #navigator_bar_bottom .global_btn_grey {
    background: url(<%= asset_path "IE/global-button-grey.gif" %>) no-repeat top left;
  }
  #navigator_bar .global_btn_grey {
    Background: url(<%= asset_path "IE/compare_grey_nav_top.gif" %>) no-repeat top left;
  }
  #navigator_bar .global_btn {
    Background: url(<%= asset_path "IE/compare_blue_nav_top.gif" %>) no-repeat top left;
  }
  .global_btn {
    display: block;
    width: 93px;
    height: 20px;
    padding: 5px;
  }
}

.optemo #IE .global_btn_grey span{
  margin: 5px auto;
}
.optemo #IE .global_btn span {
	display:inline-block;
	background: url(<%= asset_path "IE/global-button-right.gif" %>) no-repeat right;
	padding:0 10px 0 4px;
	height:21px;
	line-height:21px;
	color:#ffffff;
	font-size:10px;
	cursor:pointer;
}
.optemo #IE .global_btn_grey span {
  background: url(<%= asset_path "IE/global-button-right.gif" %>) no-repeat right;
}
.optemo #IE .global_btn:hover, .optemo #IE .global_btn_grey:hover {
	text-decoration:none;
}
.optemo #IE .global_btn:hover span, .optemo #IE .global_btn_grey:hover span {
  color:#FFF102;
}