@mixin button-prop {
  float: left;
  height: 25px;
  width: auto;
}

#optemo_embedder {
  .buttons {
    background: url(<%= asset_data_uri('mccpbluebackground.gif') %>) repeat-x scroll 0 0 transparent;
    @include button-prop;
    .left {
      background: url(<%= asset_data_uri('mccpblueleft.gif') %>) no-repeat scroll left top transparent;
      @include button-prop;
    }
    .right {
      background: url(<%= asset_data_uri('mccpblueright.gif') %>) no-repeat scroll right top transparent;
      @include button-prop;
      overflow: hidden;
      text-align: center;
      width: 140px;
    }
    a {
      color: black !important;
      cursor: pointer;
      display: block;
      font-size: 11px;
      font-weight: bold;
      line-height: 14px;
      overflow: visible;
      padding: 4px 12px 5px;
      text-align: center;
      outline: 0 none;
      text-decoration: none;
    }
  }
  .ie6,.ie7 {
    .buttons {
      .background-image: url(<%= asset_path('mccpbluebackground.gif') %>);
      .left {
        .background-image: url(<%= asset_path('mccpblueleft.gif') %>);
      }
      .right {
        .background-image: url(<%= asset_path('mccpblueright.gif') %>);
      }
      a:hover {
        text-decoration: none;
      }
    }
  }
}