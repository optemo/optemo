//--------------------------------------*/


#optemo_embedder {
  .poptitle {
  	font-size: 1.13em;
  	color: #FFF;
  }
  .poptitle a {
  	height: 100%;
  	display: block;
  	padding: 6px 7px;
  }

  .bb_poptitle {
  	font-weight: bold;
  	font-size: 1.13em;
  	color: #000;
    height: 22px;
    margin-left: -2px;
    margin-top: 5px;
  	line-height:22px;
  	margin-bottom:5px;
    overflow: visible;
    background-color: #fff200;
    height: 40px;
  }

  .bb_poptitle .bb_quickview_close {
  	float: right;
  	margin: -18px -57px 0 0;
  	cursor: pointer;
    background: url(<%= asset_data_uri('closepopup.gif') %>) no-repeat bottom right;
    height: 39px;
    width: 80px;
  }
  .ie67 .bb_poptitle .bb_quickview_close {
    position: relative;
    background-image: url(<%= asset_path('closepopup.gif') %>);
    margin: -13px -58px 0 0;
  }
  .ie7 .bb_poptitle .bb_quickview_close {
    margin-right: -56px;
  }

  .comp-title {
  	display:block;
  	float:left;
    margin: 10px 12px;
  }

  /*.fv {
  	float: left;
  	width: 190px;
  	margin-left: 25px;
  }*/

  /* Navigator box */

  .price {
  	/*color: #F5000B;*/
  	font-weight: bold;
  	font-size: 1em;
  	margin-top: 1px;
  	margin-bottom: 6px;
  }

  .saleprice {
  	/*color: #F5000B;*/
  	color: #FF0000;
  	font-size: 1em;
  	font-weight: bold;
  }
  .save {
  	/*color: #F5000B;*/
  	font-weight: bold;
  	font-size: 0.8em;
  	padding-bottom: 1px;
  }
  .saleends {
  	/*color: #F5000B;*/
  	font-size: 0.8em;
  	margin-bottom: 4px;
  }
  .stars {
  	padding-top: 3px;
  	height: 15px;
  }
  .stars img {
    float: left;
  }

  .bundlesbox {
    text-align: left;
    border-top: 1px solid #e1e1e1;
    font-size: 0.8em;
    margin: 6px 10px 0;
  }

  .nolinelink {
    text-decoration: none;
  }

  .nolinelink:hover {
    text-decoration: none;
  }

  .bundlediv {
    padding-bottom: 5px;
    min-height: 35px;
    border:1px solid white;
  }

  .bundlediv:hover {
    border:1px solid blue;
  }

  .bundleslabel {
    padding-left: 5px;
    padding-bottom: 5px;
  }

  .colorslabel {
    margin-bottom: 2px;
    text-align: left;
  }

  .sibling img {
    height: 35px;
    width: 35px;
    overflow: left;
    vertical-align: middle;
  }

