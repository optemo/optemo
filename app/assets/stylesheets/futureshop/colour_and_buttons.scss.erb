.optemo {
  .ie6 *, .ie7 * {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
  }
}  

/*--------------------------------------//
//            Color Picker              //
//--------------------------------------*/
.optemo {
  .swatch {
  	width: 13px;
  	height: 13px;
  	background-color: red;
  	/*-moz-border-radius: 4px; 
  	-webkit-border-radius: 4px;
  	border-radius: 4px;
  	-moz-box-shadow: 0 1px 3px rgba(50,50,50,0.5);
  	-webkit-box-shadow: 0 1px 3px rgba(50,50,50,0.5);
  	box-shadow: 0 1px 3px rgba(50,50,50,0.5);
  	border: 1px solid #ccc;*/
  	float: left;
  	margin: 0 2px 2px 0;
  	cursor: pointer;
  }

  .white_swatch {
    width: 11px;
    height: 11px;
    border: 1px solid #ccc;
  }

  .selected_swatch_dark {
  	background-image: url(data:image/gif;base64,R0lGODlhDQANAIABAP///////yH5BAEAAAEALAAAAAANAA0AAAIVjI+py43gAphtwnds0lpZynRVRDoFADs=);
  }

  .selected_swatch_light {
  	background-image: url(data:image/gif;base64,R0lGODlhDQANAIABAAAAAP///yH5BAEAAAEALAAAAAANAA0AAAIVjI+py43gAphtwnds0lpZynRVRDoFADs=);
  }

  #IE .selected_swatch_dark {
  	background-image: url(<%= asset_path 'IE/checkmark-white.gif' %>) repeat-x;
  }
  #IE .selected_swatch_light {
  	background-image: url(<%= asset_path 'IE/checkmark.gif' %>) repeat-x;
  }
  
  .invisible {
  	display: none;
  }
  
  .disabled {
  	color: #aaa;
  }

  .y_bottom {
    margin: 12px 0 0px;
    padding-right: 6px;
    padding-bottom: 3px;
  	overflow:hidden;
    height: 25px;
    font-weight: bold;
  }

  #IE .y_bottom {
    height: 25px;
  }

  .pagination-container {
    position: relative;
    background: url(<%= asset_data_uri('futureshop_navbar_gradient.gif')%>) repeat-x;
    text-align: right;
    padding-top: 10px;
    font-size: 12px;
    height: 23px;
    border-color: #b1b1b1;
    border-style: solid solid none;
    border-width: 1px 1px 0;
    margin-top: 10px;
  }
  .pagination-container.bottom {
    margin-top: 0;
    border-width: 0 1px 1px;
  }
  #IE.ie7 .pagination-container, #IE.ie6 .pagination-container{
    height: 23px;
    background-image: url(<%= asset_path('futureshop_navbar_gradient.gif') %>);
  }
  #back-to-top-bottom {
    margin-right: 14px;
  }
  .pagination {
    text-align: center;
    padding: 0px 29px;
    display: inline;
  }
  #IE.ie67 .pagination {
    background: #e7e7e7;
  }
  .pagination .current{
    font-style: normal;
    font-weight: bold;
  }
  .pagination a img{
    vertical-align: top;
    padding: 1px 0 0;
  }
  #IE .pagination a img{
    vertical-align: sub; /* For ie9 */
  }
  #IE.ie8 .pagination a img{
    vertical-align: top;
    margin-top: 1px;
  }
  #IE.ie7 .pagination a img, #IE.ie6 .pagination a img{
    vertical-align: middle;
    margin-top: 0;
  }
  .pagination-container a, .pagination-container a:hover, .pagination-container a:visited {
    color: #333333;
    text-decoration: underline;
  }
  .pagination a, .pagination strong {
    padding: 3px 1px;
    line-height: 12px;
  }
  .pagination span.gap {
    display: none;
  }
  .pagination .disabled {
    display: none;
  }

  .pagi-info {
    position: absolute;
    left: 0;
    top: 0;
    padding: 10px 0;
    margin-left: 14px;
  }

  #back-to-top-bottom, #back-to-top-bottom:visited {
    position: absolute;
    right: 0;
    top: 0;
    background: url(<%= asset_data_uri 'back-to-top-small.gif' %>) no-repeat right center;
    padding: 10px 20px 5px 5px;
  }

  .ie67 #back-to-top-bottom, .ie67 #back-to-top-bottom:visited {
    background-image: url(<%= asset_path 'back-to-top-small.gif' %>) no-repeat right center;
  }
}