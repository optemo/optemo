.optemo {
  .ie6 *, .ie7 * {
    margin: 0 0 0 0;
    padding: 0 0 0 0;
  }
}  

/*--------------------------------------//
//            Color Picker              //
//--------------------------------------*/
.optemo {
  .swatches {
    margin: 0 16px;
  }
  .swatch {
  	width: 20px;
  	height: 20px;
  	background-color: red;
  	-moz-border-radius: 4px; 
  	-webkit-border-radius: 4px;
  	border-radius: 4px;
  	/*-moz-box-shadow: 0 1px 3px rgba(50,50,50,0.5);
  	-webkit-box-shadow: 0 1px 3px rgba(50,50,50,0.5);
  	box-shadow: 0 1px 3px rgba(50,50,50,0.5);*/
  	border: 2px solid #666;
  	float: left;
  	margin: 0 8px 8px 0;
  	cursor: pointer;
  }

  .selected_swatch_dark {
  	background-image: url(<%= asset_data_uri 'checkmark-white.gif' %>);
  }

  .selected_swatch_light {
  	background-image: url(<%= asset_data_uri 'checkmark.gif' %>);
  }

  #IE .selected_swatch_dark {
  	background-image: url(<%= asset_path 'checkmark-white.gif' %>) repeat-x;
  }
  #IE .selected_swatch_light {
  	background-image: url(<%= asset_path 'checkmark.gif' %>) repeat-x;
  }
  
  .invisible {
  	display: none;
  }
  
  .disabled {
  	color: #aaa;
  }

  .y_bottom {
    padding: 8px 0 0 16px;
    height: 25px;
    font-weight: bold;
  }

  #back-to-top-bottom {
    margin-right: 14px;
  }
  .pagination {
    display: inline;
    float: right;
  }
  #IE.ie67 .pagination {
    background: #e7e7e7;
  }
  .pagination .current{
    background-color: #e5e5e5;
    font-weight: bold;
    font-style: normal;
    font-size: 12px;
    padding: 3px 4px;
  }
  .pagination a img{
    vertical-align: top;
    padding: 1px 0 0;
  }
  #IE .pagination a img{
    vertical-align: sub; /* For ie9 */
  }
  #IE.ie8 .pagination a img{
    vertical-align: top;
    margin-top: 1px;
  }
  #IE.ie7 .pagination a img, #IE.ie6 .pagination a img{
    vertical-align: middle;
    margin-top: 0;
  }
  .pagination a, .pagination strong {
    color: #A50016;
    padding: 3px 1px;
    font-size: 12px;
  }
  .pagination span.gap {
    display: none;
  }
  .pagination .disabled {
    display: none;
  }
  
  .pagination-prev {
    background: url(<%= asset_data_uri 'prev-page_fs.gif' %>) no-repeat;
    width: 8px;
    height: 11px;
    display: inline-block;
  }
  .ie67 .pagination-prev {
    background: url(<%= asset_path 'prev-page_fs.gif' %>) no-repeat center;
  }
  .pagination-next {
    background: url(<%= asset_data_uri 'next-page_fs.gif' %>) no-repeat;
    width: 8px;
    height: 11px;
    display: inline-block;
  }
  .ie67 .pagination-next {
    background: url(<%= asset_path 'next-page_fs.gif' %>) no-repeat center;
  }
  #IE.ie7 .pagination-next, #IE.ie7 .pagination-prev {
    margin-bottom: 3px;
  }

  .pagi-info {
    position: absolute;
    left: 0;
    top: 0;
    padding: 10px 0;
    margin-left: 14px;
  }

  #back-to-top-bottom, #back-to-top-bottom:visited {
    position: absolute;
    right: 0;
    top: 0;
    background: url(<%= asset_data_uri 'back-to-top-small.gif' %>) no-repeat right center;
    padding: 10px 20px 5px 5px;
  }

  .ie67 #back-to-top-bottom, .ie67 #back-to-top-bottom:visited {
    background-image: url(<%= asset_path 'back-to-top-small.gif' %>) no-repeat right center;
  }
}