/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//          Direct Comparison           //
//--------------------------------------*/

.optemo {
  .column {
  	float: left;
  }
  .comparisonmatrix {
  	position: relative;
  	width:100%;
  	margin-top: 1px;
  	clear: left;
  }
  #hideable_matrix {
  	display: none;
  }
  .cell {
  	width: 159px;
  	height: 100%;
  	font-size: 0.92em;
  	padding: 0 0 0 35px;
  	float: left;
  	position: relative;
  }
  .cell img {
    top: 3px;
    position: absolute;
  }
  .thumbnailcell {
  	padding: 15px 10px 20px 0;
  	width: 189px;
  	float: left;
  }
  .columntitle {
  	width: 189px;
  	padding-top: 13px;
  	padding-right: 5px;
  	z-index: 1000;
  	position: relative;
  	float: left;
    text-align: center;
  }

  .graybg {
  	background: white;
  }

  .whitebg {
  	background: #ebebeb;
  }
  .leftmostcolumn {
  	width: 128px;
  	padding-left: 0px;
  }
  .leftcolumntext {
  	width: 124px;
  	padding-left: 0px;
  	padding-right: 7px;
  }
  .leftmostcolumntitle {
  	width: 123px;
  	padding-left: 0px;
  	font-weight: bold;
  	padding-bottom: 7px;
  	text-align: left;
  }
  .tabletitle {
  	font-size:0.85em;
  	font-weight: normal;
  }
  .remove span{
    background-image: url(<%= asset_data_uri "remove_fs.png" %>);
    width: 9px;
    height: 9px;
    vertical-align: middle;
    display: inline-block;
  }
  .thumbnail_container {
  	height: 100px;
  	text-align: center;v
  	img {
  	  height: 100%;
	  }
  }
  .thumbnaillabel {
  	text-align:center;
  	padding-top: 7px;
  	color:#0A2088;
  	height: 120px;
  	line-height: 20px;
  	margin-bottom: 20px;
  }
  .thumbnaillabel a {
    color: #333;
  }
  .thumbnail_productinfo {
    padding: 10px 0 0 20px;
    text-align: left;
  }
  .thumbnaildetails {
  	color: black;
  	padding-bottom:5px;
  }
  .thumbnaildetailssale {
  	color: #F5000B;
  	padding-bottom:5px;
  }
  .thumbnaildetails {
  	color: #000000;
  	padding-bottom:5px;
  }
  .compare_row {
    clear: both;
    line-height: 21px;
    height:auto;
  }
  .double_height_compare_row {
    clear: both;
    line-height: 21px;
    height: 32px;
  }
  .double_height_compare_row .cell {
    height: 32px;
  }
  .triple_height_compare_row {
    clear: both;
    line-height: 16px;
    height: 48px;
  }
  .triple_height_compare_row .cell {
    height: 48px;
  }
  .quadruple_height_compare_row {
    clear: both;
    line-height: 16px;
    height: 64px;
  }
  .quadruple_height_compare_row .cell {
    height: 64px;
  }
  a.title_link, a.title_link:visited {
    color: #000;
  }
  div.togglespecs {
    margin: 10px auto 0;
  }
  #IE.ie67 div.togglespecs {
    padding: 0;
    margin: 10px 200px 0;
  }
  div.spec-capt {
  }
}  