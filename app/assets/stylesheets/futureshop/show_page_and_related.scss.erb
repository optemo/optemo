/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//        Show page and related         //
//--------------------------------------*/
* html .optemo div#opt_loading {
	position: absolute;
}
div#reviews {
	clear:both;
}
.optemo {
  div#opt_silkscreen {
   	background-color: #666;
    filter:alpha(opacity=80);
    opacity: 0.8;
  	position: fixed;
  	top: 0;
  	left: 0;
  	width: 100%;
  	height: 5000px;
  	z-index: 3;
  	display: none;
  }
  #opt_outsidecontainer {
  	position: absolute;
  	top: 20px;
  	left: 20px;
  	height: auto;
  	z-index: 1005;
  	display: none;
  	background: white;
  	-moz-box-shadow: 0 -2px 16px 3px #888;
    -webkit-box-shadow: 0 -2px 16px 3px #888;
    box-shadow: 0 -2px 16px 3px #888;
    border: 3px #ccc solid;
  }
  #info h1 {
  	font-size: 1.2em;
  	margin: 0 0 4px;
  }
  div#info {
  	font-size: 0.8em;
  	padding: 12px 23px 22px 22px;
  	min-width: 513px;
  }
  .mainprodimg {
  	text-align: center;
  }
  .ie6 .mainprodimg {
    display: block !important;
  }
  #info_container {
  	border-right: 1px solid #CCC;
  	border-bottom: 1px solid #CCC;
  	border-left: 1px solid #CCC;
  	width: 475px;
  	padding: 10px 18px 0;
  }
  div#opt_loading {
  	top: 0;
  	left: 344px;
  	position: fixed;
  	z-index: 1005;
  	font-size: 9pt;
  	display: none;
  }
  #opt_loading img {
  	vertical-align: text-bottom;
  /*	margin-right: 4px;        */
  }
  /*#image {
  	text-align: center;
  	width: 390px;
  }*/
  #features {
  	border-top: 1px dashed #999;
  	padding-top: 6px;
  	width: 475px;
  }
  #features div.buttons {
    height: 32px;
  	width: 135px;
  	margin: auto;
  }
  #features div.bbfeatures {
    height: 50px;
    line-height: 20px;
  }
  #features img {
    float: left;
    padding-right: 5px;
  }
  .shortdesc {
  	border-top: 1px dashed #999;
  	width: 475px;
  	padding: 6px 0;
  	margin-top: 6px;
  }

  div#textfeatures {
  	clear:both;
  }

  #features ul {
  	list-style-type: none;
  }
  div .showtable{
  	float: left;
  	text-align: center;
  	width: 400px;
  	margin-right:10px;
  	border: 1px dotted black;
  }
  .clear {
  	clear:both;
  	height:0;
  	line-height:0;
  	font-size:0;
  	padding:0;
  	margin:0;
  	letter-spacing:0;
  }
  a.tab {
  	text-decoration: none;
  	color: #3E3E3E;
  	text-align: center;
  	float: left;
  	height:17px;
  	border: 1px solid #ccc;
  	background-image:-moz-linear-gradient(center bottom, white, #cdcdcd);
  	background-image:-o-linear-gradient(bottom, white, rgb(205,205,205));
  	background-image:-webkit-gradient(linear, left bottom, left top, from(white), to(#cdcdcd));
  }
  #IE a.tab {
  	background: url(<%= asset_path "IE/gray_gradient.png" %>) repeat;
  }
  .tab:hover {
  	text-decoration: none;
  }
  #tab_selected {
  	background-image:-moz-linear-gradient(center bottom, white, #FFEF00);
  	background-image:-o-linear-gradient(bottom, white, rgb(255,239,0));
  	background-image:-webkit-gradient(linear, left bottom, left top, from(white), to(#ffef00));
  	border-bottom: 1px solid white;
  	color: black;
  	font-weight: bold;
  }
  #IE #tab_selected {
  	background: url(<%= asset_path "IE/yellow_gradient.png" %>) repeat;
  }
  .tabspacer {
  	height: 30px;
  	border-bottom : 1px solid #ccc;
  	width: 4px;
  	float: left;
  }
  .pricespacer {
  	border-bottom: 1px dashed #999; 
  	clear: both; 
  	margin-bottom: 15px;
  }
  .left {
  	float: left;
  }
  .right {
  	float: right;
  }
  ul{
  	list-style-type: none;
  	padding-left: 1em;
  	padding-bottom: 0.7em;
  }
  li{
  	list-style-type: none;
  	padding-left: 1em;
  }
  .narrow_text {
    margin: 10px 5px 0 7px;
    padding: 0;
  }
  .narrow_text h1 {
    text-align:left;
  }
  
  .narrow_text h1 {
  	font-size: 12px;
  	font-weight: bold;
  	margin:0 5px 6px 0;
  }
  
  .refine_text, .french_refine_text {
	  font-size: 13px;
	  font-weight: bold;
	  text-align: center;
	  color: #FFF;
	  font-family: Verdana, sans-serif;
  }
  .french_refine_text {
    font-size: 16.3px;
  }
  .narrow_text .en {
    width: 164px;
  }
  .fr .narrow_text h1 {
    padding: 0 10px 0 8px;
  }
  .y_heading
  {
    overflow:hidden;
    height: 55px;
    background-color: #333333;
    padding: 0;
    text-align: right;
    margin:0;
  }
  .fr .y_heading {
    height: 80px;
  }
  .y_heading a.regular_reset, .y_bottom a.regular_reset{ 
    font-size: 13px;
    font-weight: bold;
    padding: 0;
    margin: 7px 5px 0;
    text-decoration: none;
    color: #FFF;
  }
  .nav_clear_btn, .nav_clear_btn:visited{
    font-size: 11px;
    left: 418px;
    margin: 2px 0 0;
    padding: 0;
    position: absolute;
    color: black;
    top: 55px;
    text-decoration: underline;
  }
  .y_bottom a.regular_reset {
    margin: 7px 0 0 53px;
    height: 15px;
    color: #333;
  }
  #IE .y_heading a.regular_reset{
    display: block;
  }
  #IE .y_bottom a.regular_reset{
    margin: 7px 0 0 53px;
    height: 15px;
  }
  #bestbuy_sibling_images {
    height: 40px;
    float: right;
    position: relative;
  }
}  