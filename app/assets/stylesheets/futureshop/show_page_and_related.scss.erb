/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//        Show page and related         //
//--------------------------------------*/
* html .optemo div#opt_loading {
	position: absolute;
}
div#reviews {
	clear:both;
}
.optemo {
  div#opt_silkscreen {
   	background-color: #666;
    filter:alpha(opacity=80);
    opacity: 0.8;
  	position: fixed;
  	top: 0;
  	left: 0;
  	width: 100%;
  	height: 5000px;
  	z-index: 6000;
  	display: none;
  }
  .ie6 div#opt_silkscreen {
    position: absolute;
  }
  #opt_outsidecontainer {
  	position: absolute;
  	top: 20px;
  	left: 20px;
  	height: auto;
  	z-index: 6005;
  	display: none;
  	-moz-box-shadow: 0 -2px 16px 3px #888;
    -webkit-box-shadow: 0 -2px 16px 3px #888;
    box-shadow: 0 -2px 16px 3px #888;
  }
  #info h1 {
  	font-size: 1.2em;
  	margin: 0 0 4px;
  }
  div#info {
  	min-width: 513px;
  	border: 1px solid black;
    background: white;
    padding: 0 15px 15px;
  }
  .ie6 div#info {
    padding-right: 35px;
    padding-left: 10px;
    overflow: hidden;
  }
  .mainprodimg {
  	text-align: center;
  }
  .ie6 .mainprodimg {
    display: block !important;
  }
  #info_container {
  	border-right: 1px solid #CCC;
  	border-bottom: 1px solid #CCC;
  	border-left: 1px solid #CCC;
  	width: 475px;
  	padding: 10px 18px 0;
  }
  div#opt_loading {
  	top: 0;
  	left: 344px;
  	position: fixed;
  	z-index: 1005;
  	font-size: 9pt;
  	display: none;
  }
  #opt_loading img {
  	vertical-align: text-bottom;
  /*	margin-right: 4px;        */
  }
  /*#image {
  	text-align: center;
  	width: 390px;
  }*/
  #features {
  	border-top: 1px dashed #999;
  	padding-top: 6px;
  	width: 475px;
  }
  #features div.buttons {
    height: 32px;
  	width: 135px;
  	margin: auto;
  }
  #features div.bbfeatures {
    height: 50px;
    line-height: 20px;
  }
  #features img {
    float: left;
    padding-right: 5px;
  }
  .shortdesc {
  	border-top: 1px dashed #999;
  	width: 475px;
  	padding: 6px 0;
  	margin-top: 6px;
  }

  div#textfeatures {
  	clear:both;
  }

  #features ul {
  	list-style-type: none;
  }
  div .showtable{
  	float: left;
  	text-align: center;
  	width: 400px;
  	margin-right:10px;
  	border: 1px dotted black;
  }
  .floatclear {
  	clear:both;
  }
  .pricespacer {
  	border-bottom: 1px dashed #999; 
  	clear: both; 
  	margin-bottom: 15px;
  }
  .left {
  	float: left;
  }
  .right {
  	float: right;
  }
  
  .refine_text, .french_refine_text {
	  font-weight: bold;
	  font-size: 14px;
	  padding: 13px 8px 12px 16px;
  }
  .y_heading {
    border-bottom: 1px solid #fff;
  	background-color: #dee8f4;
  }

  .nav_clear_btn, .nav_clear_btn:visited {
    vertical-align: sub;
    margin-left: 4px;
  }
  .y_bottom a.regular_reset {
    height: 15px;
    color: #a50016;
    text-align: left;
    text-decoration: none;
  }

  #bestbuy_sibling_images {
    height: 40px;
    float: right;
    position: relative;
  }
}  