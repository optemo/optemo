/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */
 
/*--------------------------------------//
//            Navigator Bar             //
//--------------------------------------*/

.optemo {
  .watermark {
    padding: 8px 0 8px 16px;
    float: left;
    a {
      color: black;
    }
  }
  #filterbar {
  	padding-bottom: 12px;
  }
  #IE #filterbar {
  	padding-bottom: 0px;
  }
  .bd {
  	position: relative;
  	padding-top: 5px;
  	width: 100%;
  	height: 100%;
  	min-height: 744px; /* Empirically determined; used for embedded LPH layout */
  }
  
  #navtitle {
    display: inline-block;
    margin-top: 9px;
    margin-right: 5px;
    width: 350px;
  }
  
  .strong {
    font-weight: bold;
  }

  .seeall, .seeall:visited {
    float: right;
    color: black;
    margin-top: 5px;
  }
  .seeall div {
    display: inline-block;
    width: 8px; 
    height: 13px;
    position: relative;
    top: 2px;
  }
  #IE .seeall div {
    display: inline;
    zoom: 1;
  }
  #nav_compare_btn {
    color: black;
  }
  #navigator_bar {
    padding-bottom: 10px;
    border-top: solid 1px #ebebeb;
    border-bottom: solid 1px #ebebeb;
  }
  
  .sorting-menu {
    display: inline-block;
    border: solid 1px #ebebeb;
    padding: 2px 8px 4px 8px;
    cursor: pointer;
  }
  .sorting-menu a:hover {
    text-decoration: none;
  }
  .sorting-menu.open {
    background-color: #ebebeb;
  }
  .caret {
    background-image: url(<%= asset_data_uri "carat_down.gif" %>);
    width: 12px;
    height: 8px;
    display: inline-block;
  }
  .sortby-container {
    float: right;
  }
  .comparison_and_sort {
    padding: 10px 0;
    font-size: 12px;
    border-bottom: 1px solid #EBEBEB;
  }
  #spellcheck_suggestion_box{
  	color: red;
	font-size: 12px;
	height: 27px;
	padding: 0 0 0 15px;
	margin: 0;
  }
  #spellcheck_suggestion_box b{
  	color: black;
  }
}

.optemo_embedder {
  float: right;
  padding-right: 10px;
  margin-top: 3px;
  font-size: 0.8em;
  font-weight: bold;
}
