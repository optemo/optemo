@mixin button-prop {
  float: left;
}
@mixin button-link {
  cursor: pointer;
  display: block;
  font-weight: bold;
  line-height: 14px;
  overflow: visible;
  text-align: center;
  outline: 0 none;
  text-decoration: none;
}

.optemo {
  .buttons {
    background: url(<%= asset_data_uri('mccpredbg.gif') %>) repeat-x scroll 0 0 transparent;
    @include button-prop;
    .left {
      background: url(<%= asset_data_uri('mccpredleft.gif') %>) no-repeat scroll left top transparent;
      @include button-prop;
    }
    .right {
      background: url(<%= asset_data_uri('mccpredright.gif') %>) no-repeat scroll right top transparent;
      @include button-prop;
      overflow: hidden;
      text-align: center;
      width: 140px;
      height: 25px;
    }
    a {
      @include button-link;
      color: white !important;
      font-size: 11px;
      padding: 4px 12px 5px;
    }
  }
  .ie6,.ie7 {
    .buttons {
      background-image: url(<%= asset_path('mccpredbg.gif') %>);
      .left {
        background-image: url(<%= asset_path('mccpredleft.gif') %>);
      }
      .right {
        background-image: url(<%= asset_path('mccpredright.gif') %>);
      }
      a:hover {
        text-decoration: none;
      }
    }
  }
  
  .morespecs {
    background: url(<%= asset_data_uri('gray_m.gif') %>) repeat-x scroll 0 0 transparent;
    display: table;
    .left {
      background: url(<%= asset_data_uri('gray_l.gif') %>) no-repeat scroll left top transparent;
    }
    .right {
      background: url(<%= asset_data_uri('gray_r.gif') %>) no-repeat scroll right top transparent;
      overflow: hidden;
      text-align: center;
      width: 130px;
      height: 26px;
    }
    a {
      @include button-link;
      color: #FFF !important;
      font-size: 12px;
      padding: 5px 12px 5px;
    }
  }
  #IE {
    .morespecs {
      a div {
        display: inline;
        zoom: 1;
      }
    }
  }
  .ie6,.ie7 {
    .morespecs {
      background-image: url(<%= asset_path('gray_n.gif') %>);
      @include button-prop;
      .left {
        background-image: url(<%= asset_path('gray_l.gif') %>);
        @include button-prop;
      }
      .right {
        background-image: url(<%= asset_path('gray_r.gif') %>);
        @include button-prop;
      }
      a:hover {
        text-decoration: none;
      }
      a div {
        background: url(<%= asset_path('gt.gif') %>);
      }
    }
  }
}