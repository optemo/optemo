/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//    Main Nav Controls (Left Side)     //
//--------------------------------------*/

.optemo {
  a { color: #A50016; }
  a:hover {	color: #A50016; }
  
  #inside_filter {
  	border-bottom: 1px solid #C9C9C9;
  }
  
  #IE.ie7 #ajaxfilter, #IE.ie6 #ajaxfilter {
    display:inline-block;
  }
  #IE.ie6 #ajaxfilter {
    padding-bottom: 7px;
  }
  .brand {
    overflow: auto;
  	max-height: 150px;
  }
  .categorical {
    margin-bottom: 8px;
  }
  .categorical .feature, .list_item {
    padding-bottom: 1px;
  }
  #IE .brand {
    height: expression( this.scrollHeight > 150 ? "150px" : "auto" ); /* sets max-height for IE */
  }
  a.checkbox_text{
  	color: #a50016;
  	position: relative;
  	top: -1px;
  }
  a.checkbox_text:visited{
  	color: #a50016;
  }
  .disabled a.checkbox_text{
  	color: #ccc;
  }
  .av_count{
  	font-size: 0.85em;
  	color: #333;
  }
  .hanging_indent {
    text-indent: -24px;
    margin: 0 0 2px 36px;
  }
  .hanging_margin {
    margin: 8px 0 8px 16px;
  }
}