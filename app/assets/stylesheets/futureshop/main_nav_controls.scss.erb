/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//    Main Nav Controls (Left Side)     //
//--------------------------------------*/

.optemo {
  font-size: 1.2em;
  a { color: #333; font-family: verdana;}
  a:hover {	color: #BE0027; }
  
  #inside_filter {
  	border-right: 8px solid #A7A39C;
  	border-bottom: 8px solid #A7A39C;
  	color: #333;
  	border-radius: 0 0 26px 0;
  }
  .ie678 #inside_filter {
    border-bottom: none;
  }
  
  #IE.ie7 #ajaxfilter, #IE.ie6 #ajaxfilter {
    display:inline-block;
  }
  #IE.ie6 #ajaxfilter {
    padding-bottom: 7px;
  }
  .brand {
    overflow: auto;
  	max-height: 150px;
  }
  .categorical .feature, .list_item {
    padding-bottom: 1px;
  }
  #IE .brand {
    height: expression( this.scrollHeight > 150 ? "150px" : "auto" ); /* sets max-height for IE */
  }
  a.checkbox_text{
  	color: #4d4d4f;
  }
  a.checkbox_text:visited{
  	color: #4d4d4f;
  }
  .disabled a.checkbox_text{
  	color: #ccc;
  }
  .av_count{
  	font-size: 0.85em;
  }
  .hanging_indent {
    text-indent: -18px;
    margin: 5px 0 5px 18px;
  }
  .hanging_margin {
    margin: 3px 0 3px 8px;
  }
}