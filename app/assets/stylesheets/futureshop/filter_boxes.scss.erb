/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//             Filter Boxes             //
//--------------------------------------*/
.optemo {
  #filter_form #your_selections {
  	font-size: 0.85em;
  }
  #IE .label{
    padding-top: 10px;
  }
  .label {
  	font-weight: bold;
  	text-align: left;
  	clear: left;
  	padding-top: 4px;
  }
  .unitdisp {      /* Display units of features in filters */
  	font-size: 0.8em;
  	font-weight: normal;
  }
  .feature {
    padding: 0 0 0 6px;
  }
  .desc {
  	display: none;
  	position: absolute;
  	bottom: 1.5em;
  	left: 0;
  	padding: 4px;
  	border: solid thin black;
  	background-color: #fff;
  	z-index: 10;
  }
  .hist {
  	position: absolute;
  	left: 4px;
  	top: 3px;
  	text-align: left;
  }
  #IE.ie6 .hist {
    left: 0;
  }
  .boldlabel {
  	font-weight: bold;
  	text-align: center;
  	clear: left;
  	padding-top: 10px;
  	padding-bottom: 4px;
    padding-left: 0;
    background-color: #DFDED5;
    margin-left: -6px;
    margin-top: 0;
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    height: 23px;
  }
}