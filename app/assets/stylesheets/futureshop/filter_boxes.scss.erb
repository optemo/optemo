/* CSS declarations shared between grid view and list view (Optemo Direct and Optemo Assist) go here */

/*--------------------------------------//
//             Filter Boxes             //
//--------------------------------------*/
.optemo {
  #filter_form {
    padding-bottom: 5px;
  }
  .selection_label {
    font-weight: bold;
  }
  .remove_filter {
    font-size: 10px;
    div {
      width: 9px;
      height: 9px;
      vertical-align: middle;
      display: inline-block;
      background-image: url(<%= asset_data_uri "futureshop_remove_facet.gif" %>);
    }
  }
  #IE .label{
    padding-top: 12px;
  }
  .ie67 .remove_filter div {
    background: url(<%= asset_path "futureshop_remove_facet.gif" %>) no-repeat top left;
    display: inline;
  }
  .label {
  	text-align: left;
  	clear: left;
  	padding: 16px 0 4px 16px;
  }
  #selections_text .label {
    padding: 0;
  }
  #your_selections {
    margin-bottom: 8px;
  	padding: 8px 0;
  	border: 1px solid #DEE8F4;
  	background: #dee8f4; /* Old browsers */
  	background: -moz-linear-gradient(top,  #dee8f4 0%, #ffffff 100%); /* FF3.6+ */
  	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#dee8f4), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
  	background: -webkit-linear-gradient(top,  #dee8f4 0%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
  	background: -o-linear-gradient(top,  #dee8f4 0%,#ffffff 100%); /* Opera 11.10+ */
  	background: -ms-linear-gradient(top,  #dee8f4 0%,#ffffff 100%); /* IE10+ */
  	background: linear-gradient(to bottom,  #dee8f4 0%,#ffffff 100%); /* W3C */
  	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#dee8f4', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */
  }
  .unitdisp {      /* Display units of features in filters */
  	font-size: 0.8em;
  	font-weight: normal;
  }
  .feature {
    font-size: 12px;
  }
  .ie6 .feature {
    position: relative;
  }
  .desc {
  	display: none;
  	position: absolute;
  	bottom: 1.5em;
  	left: 0;
  	padding: 4px;
  	border: solid thin black;
  	background-color: #fff;
  	z-index: 1001;
  }
  .hist {
  	position: absolute;
  	left: 20px;
  	top: 1px;
  	text-align: left;
  }
  #IE.ie6 .hist {
    left: 16px;
  }
  .boldlabel {
  	font-weight: bold;
  	text-align: center;
  	clear: left;
    padding: 6px 0 0;
    background-color: #DFDED5;
    margin: 8px 0 2px -6px;
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    height: 23px;
  }
}